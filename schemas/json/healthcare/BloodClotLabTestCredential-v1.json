{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/Viken-Blockchain-Solutions/web3_patient_portal/main/schemas/json-ld/healthcare/BloodClotLabTestContext-v1.json-ld",
      "jsonSchema": "https://raw.githubusercontent.com/Viken-Blockchain-Solutions/web3_patient_portal/main/schemas/json/healthcare/BloodClotLabTestCredential-v1.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": ["string", "array", "object"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "testName", "testResult"],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "testName": {
          "type": "string"
        },
        "testResult": {
          "type": "object",
          "properties": {
            "D-dimer": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "unit": {"type": "string"},
                "referenceRange": {"type": "string"}
              },
              "required": ["value", "unit"]
            },
            "PlateletCount": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "unit": {"type": "string"},
                "referenceRange": {"type": "string"}
              },
              "required": ["value", "unit"]
            },
            "ProthrombinTime": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "unit": {"type": "string"},
                "referenceRange": {"type": "string"}
              },
              "required": ["value", "unit"]
            },
            "aPTT": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "unit": {"type": "string"},
                "referenceRange": {"type": "string"}
              },
              "required": ["value", "unit"]
            },
            "FibrinogenLevel": {
              "type": "object",
              "properties": {
                "value": {"type": "string"},
                "unit": {"type": "string"},
                "referenceRange": {"type": "string"}
              },
              "required": ["value", "unit"]
            }
          }
        }
      }
    }
  }
}
